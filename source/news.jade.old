!!!5
html(ng-app='msrdio')
head
  meta(charset='utf-8')
  title News
  link(rel='stylesheet', href='styles/reuze.css')
  script(src='components/angular/angular.js')
  script(src='js/news.js')

body

  div.ac.three-column.image-banner.image-border-dark(ng-controller='newsCtrl')

    article(ng-repeat='article in articles | orderBy:date' )
      div.image-feat(style='width: 250px;')
        a(href='#')
          img(src='http://placehold.it/250x100/efefef', alt='sample image')

      header
        a(href='#')
          h4.title(ng-bind='article.title')

      div.content(ng-bind='article.preview')
 
      footer
        a.rm(href='#') Read More


