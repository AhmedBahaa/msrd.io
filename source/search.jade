      script(type='text/javascript', src='http://html5shiv.googlecode.com/svn/trunk/html5.js')
  body
    .page
      section#auto
        .first-row(ng-app='search', ng-controller='listCtrl')
          .intro
            h3.show Automatic rows
            code
              Microsoft Regional Directors - Total:{{directors.length}} | Shown:{{filteredData.length}}
            code
              Search: input(ng-model='searchText', type='text', autofocus='autofocus')
          div
            div(ng-repeat='director in filteredData | filter:searchText | orderBy:\'Last\'')
              status(director="hello {{director.FullName}}")
