    title Flawless-Semantics | Showoff - Pixel Based Grid
    //
       Stylesheets
    link(rel='stylesheet', href='search/search.less', type='text/less', media='screen')
    //
       Scripts
    script(src='search/js/less-1.3.3.min.js', type='text/javascript')
       less = { env: "production"};
    script(src='components/angular/angular.js')
    script(src='search/js/search.js')
