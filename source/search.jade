!!! 5
html(ng-app='myApp')
head
    meta(charset='utf-8')

    title RD Search

    //Stylesheets
    link(rel='stylesheet', href='styles/search.css')    
    //Scripts
    script(src='components/angular/angular.js')
    script(src='js/search.js')
    //if lt IE 9
      script(type='text/javascript', src='http://html5shiv.googlecode.com/svn/trunk/html5.js')


    body(ng-controller='DataCtrl')
      div(style='margin-top: 30px') 
        form.form-search
          div(style='display: right; margin-bottom: 5px;')
            input(type='text', ng-model='searchText', placeholder='Search Regional Directors', autofocus='autofocus')
          div
            ul
              li.viewOne(ng-show='displayView == "one"', ng-repeat='item in items | filter:searchText')
                a(href='#') 
                  {{item.FullName}}
              li.viewTwo(ng-show='displayView == "two"', ng-repeat='item in items | filter:searchText')
                a(href='#', style='color:blue') 
                  div
                    {{item.FullName}}
                  div
                    {{item.City + ', ' + item.Country}}
              li.viewThree(ng-show='displayView == "three"', ng-repeat='item in items | filter:searchText')
                a(href='#')
                  img.circular(src='{{item.Avatar}}')
                div
                  {{item.FullName}}
                div
                  {{item.City + ', ' + item.Country}}
